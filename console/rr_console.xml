<root>
	<windowclass name="RequestRolls">
		<frame>partysheet</frame>
		<placement>
			<size width="500" height="400" />
		</placement>
		<sizelimits>
			<minimum width="400" height="350" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>RFIA_window_title_display</resource>
			</windowtitlebar>
			<anchor_title_partysheet name="contentanchor" />
			
			<sub_ps name="main">
				<class>rr_console</class>
			</sub_ps>
			
			<tabs_partysheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
			</tabs_partysheet>
			
			<resize_partysheet />
			<!-- <helper_ps /> -->
			<close_partysheet />
		</sheetdata>
	</windowclass>

	<windowclass name="rr_console">
		<script file="console/scripts/rr_console.lua"/>
		<sheetdata>
			<!-- header anchor -->
--			<genericcontrol name="headeranchor">
				<anchored height="25">
					<top  />
					<left offset="10" />
					<right offset="-15" />
				</anchored>
				<disabled />
			</genericcontrol>
			
			<!-- PC list -->
			<RR_window_selector name="rr_list_pc" >	
				<datasource>combattracker.list</datasource>
				<parameters>
					<listType>charsheet</listType>
				</parameters>							
				<anchored>
					<top parent="headeranchor" anchor="bottom" relation="relative" offset="5" />
				</anchored>	
				<script>
					function onFilter( w )
						if  ActorManager.isPC(w.getDatabaseNode()) then
							if CombatGroupsManager then
								return CombatGroupsManager.onFilter(w.getDatabaseNode());
							else
								return true;
							end
						else
							return false;
						end
					end
				</script>
			</RR_window_selector>

			<scrollbar>
				<anchored to="rr_list_pc" />
				<target>rr_list_pc</target>
			</scrollbar>

--			<label_ps name="label_PC">
				<anchored to="rr_list_pc" position="aboveleft" offset="0,0" width="55" />
				<static textres="RR_pc" />
				<center />
			</label_ps>

			<button_select_all name="PC_all">
				<anchored to="label_PC" position="right"/>
				<target>rr_list_pc</target>
			</button_select_all>
			<button_select_random name="PC_random">
				<anchored to="PC_all" position="right"/>
				<target>rr_list_pc</target>
			</button_select_random>
			<button_deselect_all>
				<anchored to="PC_random" position="right"/>
				<target>rr_list_pc</target>
			</button_deselect_all>>

			<!-- NPC list -->
			<RR_window_selector name="rr_list_npc">
				<datasource>combattracker.list</datasource>
				<parameters>
					<listType>npc</listType>
				</parameters>
				<script>
					function onFilter( w )
						if  not ActorManager.isPC(w.getDatabaseNode()) then
							if CombatGroupsManager then
								return CombatGroupsManager.onFilter(w.getDatabaseNode());
							else
								return true;
							end
						else
							return false;
						end
					end
				</script>			
				<anchored>
					<top parent="rr_list_pc" anchor="bottom" relation="relative" offset="35" />
				</anchored>	
			</RR_window_selector>
			<scrollbar>
				<anchored to="rr_list_npc" />
				<target>rr_list_npc</target>
			</scrollbar>

--			<label_ps name="label_NPC">
				<anchored to="rr_list_npc" position="aboveleft" offset="0,0" width="55" />
				<static textres="RR_npc" />
				<center />
			</label_ps>

			<button_select_all name="NPC_all">
				<anchored to="label_NPC" position="right"/>
				<target>rr_list_npc</target>
			</button_select_all>
			<button_select_random name="NPC_random">
				<anchored to="NPC_all" position="right"/>
				<target>rr_list_npc</target>
			</button_select_random>
			<button_deselect_all>
				<anchored to="NPC_random" position="right"/>
				<target>rr_list_npc</target>
			</button_deselect_all>
			
			<!-- Roll selectors -->
			<!-- Footer anchors -->
--			<genericcontrol name="footeranchor">
				<anchored height="20">
					<bottom offset="-65" />
					<left offset="5" />
					<right offset="-5" />
				</anchored>
				<gmvisibleonly />
			</genericcontrol>
			<genericcontrol name="leftanchor">
				<anchored to="footeranchor" position="insidetopleft" width="0" height="20" />
				<disabled />
			</genericcontrol>
			
			<buttonfield name="hiderollresults">
				<anchored to="leftanchor" height="20" width="20">
					<top />
					<left anchor="right" relation="relative" offset="15" />
				</anchored>
				<frame name="fielddark" offset="10,8,10,6" />
				<state icon="visibilityon" tooltipres="ps_tooltip_showrollon" />
				<state icon="visibilityoff" tooltipres="ps_tooltip_showrolloff" />
				<gmvisibleonly />
			</buttonfield>
			<!-- checks -->
			<genericcontrol name="checkframe">
				<anchored to="leftanchor" height="20" width="245">
					<top />
					<left anchor="right" relation="relative" offset="15" />
				</anchored>
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>			
			<button_roll name="checkroll">
				<anchored to="checkframe" position="insidetopleft" offset="2,0" />
				<script file="console/scripts/rr_console_ability.lua" />
				<gmvisibleonly />
			</button_roll>
			<label name="checklabel">
				<anchored to="checkroll" position="righthigh" offset="3,0" />
				<static textres="RR_label_check" />
				<gmvisibleonly />
			</label>
			<combobox name="checkselected">
				<anchored to="checklabel" position="righthigh" offset="10,0" width="100" height="20" />
--				<default textres="ps_default_groupability" />
				<gmvisibleonly />
				<script>
					function onInit()
						super.onInit();
						addItems(DataCommon.psabilitydata);
					end
				</script>
			</combobox>
			<label name="checkdclabel">
				<anchored to="checkselected" position="righthigh" offset="10,0" />
				<static textres="dc" />
				<gmvisibleonly />
			</label>
			<basicnumber name="checkdc">
				<anchored to="checkdclabel" position="righthigh" offset="10,0" width="30" height="20" />
				<gmvisibleonly />
			</basicnumber>			
			<!-- saves -->
			<genericcontrol name="saveframe">
				<anchored to="leftanchor" height="20" width="235">
					<top />
					<left anchor="right" relation="relative" offset="15" />
				</anchored>
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>			
			<button_roll name="saveroll">
				<anchored to="saveframe" position="insidetopleft" offset="2,0" />
				<script file="console/scripts/rr_console_save.lua" />
				<gmvisibleonly />
			</button_roll>
			<label name="savelabel">
				<anchored to="saveroll" position="righthigh" offset="3,0" />
				<static textres="RR_label_save" />
				<gmvisibleonly />
			</label>
			<combobox name="saveselected">
				<anchored to="savelabel" position="righthigh" offset="10,0" width="100" height="20" />
--				<default textres="ps_default_groupability" />
				<gmvisibleonly />
				<script>
					function onInit()
						super.onInit();
						addItems(DataCommon.psabilitydata);
					end
				</script>
			</combobox>
			<label name="savedclabel">
				<anchored to="saveselected" position="righthigh" offset="10,0" />
				<static textres="dc" />
				<gmvisibleonly />
			</label>
			<basicnumber name="savedc">
				<anchored to="savedclabel" position="righthigh" offset="10,0" width="30" height="20" />
				<gmvisibleonly />
			</basicnumber>			

			<!-- skill -->
			<genericcontrol name="skillframe">
				<anchored to="checkframe" position="belowleft" offset="0,15" height="20" width="245" />
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>							
			<button_roll name="skillroll">
				<anchored to="skillframe" position="insidetopleft" offset="2,0" />
				<script file="console/scripts/rr_console_skill.lua" />
				<gmvisibleonly />
			</button_roll>
			<label name="skilllabel">
				<anchored to="skillroll" position="righthigh" offset="3,0" />
				<static textres="RR_label_skill" />
				<gmvisibleonly />
			</label>	
			<combobox name="skillselected">
				<anchored to="skilllabel" position="righthigh" offset="10,0" width="110" height="20" />
				<gmvisibleonly />
				<listmaxsize>12</listmaxsize>
				<script>
					function onInit()
						super.onInit();
						addItems(DataCommon.psskilldata);
						if RR.bCharacterSheetTweaksEnabled then addItems({"Tools/Items: Artisans Tools","Tools/Items: Gaming Set","Tools/Items: Instrument","Tools/Items: Thieves Tools"}); end
					end
				</script>
			</combobox>
			<label name="skilldclabel">
				<anchored to="skillselected" position="righthigh" offset="10,0" />
				<static textres="dc" />
				<gmvisibleonly />
			</label>
			<basicnumber name="skilldc">
				<anchored to="skilldclabel" position="righthigh" offset="10,0" width="30" height="20" />
				<gmvisibleonly />
			</basicnumber>			
			<!-- Dice roll -->
			<genericcontrol name="diceframe">
				<anchored to="skillframe" position="right" offset="15,0"  width="100" />
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>							
			<button_roll name="diceroll">
				<anchored to="diceframe" position="insidetopleft" offset="2,0" />
				<script file="console/scripts/rr_console_dice.lua" />
				<gmvisibleonly />
			</button_roll>
			<label name="dicelabel">
				<anchored to="diceroll" position="righthigh" offset="3,0" />
				<static textres="RR_label_dice" />
				<gmvisibleonly />
			</label>	
			<combobox name="diceselected">
				<anchored to="dicelabel" position="righthigh" offset="10,0" width="40" height="20" />
				<gmvisibleonly />
				<listmaxsize>12</listmaxsize>
				<unsorted />
				<script>
					function onInit()
						super.onInit();
						addItems({"d4","d6","d8","d10","d12","d20","d100"});
					end
				</script>
			</combobox>
			<!-- Init -->
			<genericcontrol name="initframe">
				<anchored to="diceframe" position="right" offset="15,0" width="50" />
				<frame name="groupbox" offset="10,10,10,10" />
				<gmvisibleonly />
			</genericcontrol>							
			<button_roll name="initroll">
				<anchored to="initframe" position="insidetopleft" offset="2,0" />
				<script file="console/scripts/rr_console_init.lua"/>
				<gmvisibleonly />
			</button_roll>
			<label name="initlabel">
				<anchored to="initroll" position="righthigh" offset="3,0" />
				<static textres="RR_label_init" />
				<gmvisibleonly />
			</label>

		</sheetdata>
	</windowclass>


	<!-- the individual entries in the npc/pc list -->
	<windowclass name="rr_entry">
		<!-- <script file="scripts/ui/rfia_entry.lua" /> -->
		<script file="console/scripts/rr_entry.lua"/>
		<sheetdata>
			<hn name="isSelectedForRFIA" />
			<hn name="rollStatusForRFIA" />			
			<anchor_column name="columnanchor" />
			<hsx name="name">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" offset="10"/>
					<left offset="10"/>
				</anchored>	
				<readonly />
				<invisible />
				<script>
					function onInit()
						super.onInit()
						window.selection.setTooltipText(getValue());
						window.selection.setStateTooltipText(1, getValue());
					end
					function onValueChanged()
						super.onValueChanged()
						window.selection.setTooltipText(getValue());
						window.selection.setStateTooltipText(1, getValue());
					end
				</script>
			</hsx>
		
			<tokenfield name="token">
				<anchored width="40" height="40">
					<top parent="columnanchor" anchor="bottom" offset="10"/>
					<left offset="10"/>
				</anchored>
				<readonly />
				<nodrag />
				<nodrop />
				<empty>token_empty</empty>			
			</tokenfield>		
			
			<buttoncontrol name="selection">
				<!-- tool tip text will only update after the first time the combat tracker is opened in a session -->
				<state icon="RFI_PcUnselected"/>
				<state icon="RFI_PcSelected"/>
				<hover icon="RFI_PcHover"/>
				<anchored  to="token" position="over"/>
			</buttoncontrol>
			
			<genericcontrol  name="roll_status">
				<anchored height="10">
					<bottom parent="token" anchor="bottom" offset="5"/>
					<left parent="token" anchor="left" offset="5"/>
					<right/>
				</anchored>
				<invisible />
				<icon></icon>				
			</genericcontrol >
		</sheetdata>
	</windowclass>	
</root>
